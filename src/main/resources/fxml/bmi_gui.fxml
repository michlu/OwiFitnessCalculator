<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="300.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.BmiController">
   <children>
      <Label text="Calculator Body Mass Index">
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin>
      </Label>
      <GridPane>
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Age" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
            <Label text="Height" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
            <Label text="Weight" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
            <TextField fx:id="ageTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="heightTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextField fx:id="weightTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <ToggleButton fx:id="btnMen" mnemonicParsing="false" text="Men" GridPane.columnIndex="1" GridPane.halignment="CENTER">
               <toggleGroup>
                  <ToggleGroup fx:id="toggleGender" />
               </toggleGroup>
            </ToggleButton>
            <ToggleButton fx:id="btnWoman" mnemonicParsing="false" text="Women" toggleGroup="$toggleGender" GridPane.columnIndex="2" GridPane.halignment="CENTER" />
            <Label fx:id="ageOkLabel" text="OK" textFill="#00ff26" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="1">
               <font>
                  <Font name="System Bold" size="11.0" />
               </font>
            </Label>
            <Label fx:id="heightOkLabel" text="OK" textFill="#00ff26" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="2">
               <font>
                  <Font name="System Bold" size="11.0" />
               </font>
            </Label>
            <Label fx:id="weightOkLabel" text="OK" textFill="#00ff26" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="3">
               <font>
                  <Font name="System Bold" size="11.0" />
               </font>
            </Label>
            <Label text="years" GridPane.columnIndex="2" GridPane.rowIndex="1">
               <padding>
                  <Insets left="10.0" />
               </padding>
            </Label>
            <Label text="cm" GridPane.columnIndex="2" GridPane.rowIndex="2">
               <padding>
                  <Insets left="10.0" />
               </padding>
            </Label>
            <Label text="kg" GridPane.columnIndex="2" GridPane.rowIndex="3">
               <padding>
                  <Insets left="10.0" />
               </padding>
            </Label>
         </children>
      </GridPane>
      <Button fx:id="btnCalculate" alignment="CENTER" mnemonicParsing="false" onAction="#bmiCalculate" prefWidth="300.0" text="Calculate">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Button>
      <Button fx:id="btnReset" mnemonicParsing="false" onAction="#bmiReset" prefWidth="300.0" text="Reset" />
      <AnchorPane prefHeight="71.0" prefWidth="300.0">
         <children>
            <Label fx:id="bmiLabel" layoutX="137.0" layoutY="28.0" text="BMI" />
            <Label layoutX="38.0" layoutY="28.0" text="Ideal Weight" AnchorPane.leftAnchor="30.0" />
            <Label layoutX="241.0" layoutY="28.0" text="Label" AnchorPane.rightAnchor="30.0" />
         </children>
      </AnchorPane>
      <ImageView fitHeight="50.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../graphics/bmiScale.png" />
         </image>
      </ImageView>
   </children>
</VBox>
